 * @description this is main class for text
 */
public class ManagementCDByText {
	public static ManagementCDBySQL sql = new ManagementCDBySQL();
	/*
	 * use to write list cd on managementCD.txt
	 * input List<CD>
	 */
	public static void writeListCD(List<CD> list) throws IOException {
		FileOutputStream out = new FileOutputStream("listCD.txt");
        ObjectOutputStream oout = new ObjectOutputStream(out);
        for (CD cd : list) {
			oout.writeObject(cd);
		}
        oout.close();
	}
	
	/*
	 * use to read list cd on managementCD.txt
	 * output List<CD>
	 */
	public static List<CD> readListCD() throws ClassNotFoundException, IOException {
		List<CD> list = null;
		FileInputStream f = new FileInputStream("src/Task2/ManagementCD.txt");
		ObjectInputStream input = null;
		if (f.available() != 0) {
			try {
				input = new ObjectInputStream(f);
				list = new ArrayList<CD>();
				while (true) {
					CD cd = (CD) input.readObject();
					list.add(cd);
				}
			} catch (EOFException | StreamCorruptedException e) {
				System.out.println(e.getMessage());
			}

		}
		return list;
	}
	
	/*
	 * use to print list
	 * input List<CD>
	 */
	public static void printList(List<CD> list) {
		System.out.println("----------------List CD--------------");
		list.forEach(i -> System.out.println(i.toString()));
	}
	
	public static void main(String[] args) throws ClassNotFoundException, IOException, SQLException {
		// TODO Auto-generated method stub
		List<CD> list = sql.cdController.getListCD();//get list CD to SQL
		
		//write all CD in file txt
		//writeListCD(list);
		
		//read all CD in file txt
		//list = readListCD();
		
		printList(list);
	}

}
