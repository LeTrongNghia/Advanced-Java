package Task2;

import java.io.EOFException;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInput;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.StreamCorruptedException;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import ManageCD.CD;

/**
 * @author Le Trong Nghia
 * @date Sep 20, 2016
 * @version 1.0
 * @description this is main class for text
 */
public class ManagementCDByText {
	/*
	 * use to write list cd on managementCD.txt
	 * input List<CD>
	 */
	public static void writeListCD(List<CD> list) {
		try {
			
			ObjectOutputStream out = new ObjectOutputStream(new FileOutputStream("src/Task2/ManagementCD.txt"));
			for(CD cd : list){
				out.writeObject(cd);
			}
			out.close();
			System.out.println("write success!");

		} catch (IOException e) {
			System.out.println(e.getMessage());
		}
	}
	
	/*
	 * use to read list cd on managementCD.txt
	 * output List<CD>
	 */
	public static List<CD> readListCD() throws ClassNotFoundException, IOException {
		List<CD> list = null;
		FileInputStream f = new FileInputStream("src/Task2/ManagementCD.txt");
		if (f.available() != 0) {
			try {
				ObjectInputStream input = new ObjectInputStream(f);
				list = new ArrayList<CD>();
				while (true) {
					CD cd = (CD) input.readObject();
					list.add(cd);
				}
			} catch (EOFException | StreamCorruptedException e) {
				System.out.println(e.getMessage());
			}

		}
		return list;
	}
	
	/*
	 * use to print list
	 * input List<CD>
	 */
	public static void printList(List<CD> list) {
		System.out.println("----------------List CD--------------");
		list.forEach(i -> System.out.println(i.toString()));
	}
	
	public static void main(String[] args) throws ClassNotFoundException, SQLException {
		// TODO Auto-generated method stub
		CDContoller cdContoller = new CDContoller();
		List<CD> list = cdContoller.getListCD();
		writeListCD(list);
		
		printList(list);
	}

}
